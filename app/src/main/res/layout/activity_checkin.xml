<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#F7FAFC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btnBack"
            android:text="Back"
            android:backgroundTint="#DDDDDD"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- äººç‰©å¡ç‰‡åŒº -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/card_bg"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:elevation="3dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_default"
                android:background="@drawable/circle_white"
                android:scaleType="centerCrop"
                android:contentDescription="User avatar"
                android:clickable="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvNickname"
                    android:text="Y.G"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#233252"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvGoalSummary"
                    android:text="Run 30 days"
                    android:textSize="15sp"
                    android:textColor="#556080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnEdit"
                android:text="Edit"
                android:textColor="#0D3B66"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- ä¸»é¢˜å¡ç‰‡ -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvGoalTitle"
                android:text="ðŸƒ 30 day running challenge"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1B2436"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvStartDate"
                android:text="Started: Jun 1, 2025"
                android:textSize="14sp"
                android:textColor="#5E7FA8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- progress -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="18dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/circleChart"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvPercent"
                        android:text="40%"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:textColor="#233252"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvProgress"
                        android:text="12 / 30 days"
                        android:textSize="15sp"
                        android:textColor="#53608F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="12dp"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnCheckIn"
                android:text="Check In"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0D3B66"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/btnShare"
                android:text="Share"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0D3B66"
                android:stateListAnimator="@null" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
