<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnBack"
            android:text="Back"
            android:backgroundTint="#DDDDDD"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_blue"
            android:clickable="true"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Log Your Meal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#0D3B66"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/editMealContent"
            android:hint="e.g., Breakfast: eggs, Lunch: salad..."
            android:background="@android:drawable/edit_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="12dp"
            android:gravity="top"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine" />


        <Button
            android:id="@+id/btnSubmitMeal"
            android:text="Submit"
            android:backgroundTint="#0D3B66"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />


        <TextView
            android:id="@+id/textAnalysis"
            android:text=""
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#F4F6F8"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


        <Button
            android:id="@+id/btnShowHistory"
            android:text="View History"
            android:backgroundTint="#BBBBBB"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:foreground="@drawable/ripple_blue"
            android:clickable="true"
            android:layout_marginBottom="16dp" />


        <LinearLayout
            android:id="@+id/layoutHistory"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
