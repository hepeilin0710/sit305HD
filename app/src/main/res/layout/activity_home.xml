<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textWelcome"
            android:text="Welcome, Alice"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#0D3B66"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSetGoal"
            android:text=" 🎯 Set goal"
            android:backgroundTint="#F0F4F8"
            android:textColor="#0D3B66"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/btnViewPlan"
            android:text=" 📋 View meal plan"
            android:backgroundTint="#F0F4F8"
            android:textColor="#0D3B66"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/btnLogMeal"
            android:text="  ✏️  Log meals"
            android:backgroundTint="#F0F4F8"
            android:textColor="#0D3B66"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/btnChat"
            android:text="  💬  Chat with AI"
            android:backgroundTint="#F0F4F8"
            android:textColor="#0D3B66"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/btnFeedback"
            android:text="  ➕  Provide feedback"
            android:backgroundTint="#F0F4F8"
            android:textColor="#0D3B66"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/btnLogout"
            android:text="Log Out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#DDDDDD"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnGuidance"
            android:text="❓ Guidance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#EEEEEE"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>
